<script>
  // Extract welcome message from the URL
  const urlParams = new URLSearchParams(window.location.search);
  const welcomeMessage = urlParams.get('welcome');

  // Display the welcome message in the navbar
  const welcomeMessageElement = document.getElementById('welcomeMessage');

  if (welcomeMessageElement && welcomeMessage) {
    welcomeMessageElement.innerText = welcomeMessage;
  }

  function redirectToProductPage(productId) {
    window.location.href = `/product/${productId}`;
  }

  fetch('https://localhost:7114/GetAllProduct')
    .then(response => response.json())
    .then(responseData => {
      const products = responseData.result;
      const productGrid = document.getElementById('productGrid');

      products.forEach(product => {
        const card = document.createElement('div');
        card.classList.add('col-lg-6', 'col-md-6', 'col-sm-12', 'mb-4');
        card.innerHTML = `
          <div class="card">
            <img src="https://localhost:7114/${product.filePath}" class="card-img-top" alt="${product.name}">
            <div class="card-body d-flex flex-column">
              <div>
                <h5 class="card-title mb-2">${product.name}</h5>
                <p class="card-text mb-2">$${product.price.toFixed(2)}</p>
              </div>
            </div>
          </div>
        `;

        card.addEventListener('click', function() {
          redirectToProductPage(product.productId);
        });

        productGrid.appendChild(card);
      });
    })
    .catch(error => console.error('Error fetching products:', error));
</script>

