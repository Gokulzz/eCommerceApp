<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Include Font Awesome CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <!-- Your existing head content... -->
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f8f9fa; /* Light gray background */
            color: #495057; /* Dark gray text color */
            margin: 0;
            padding: 0;
        }

        .container {
            max-width: 800px;
            margin: 20px auto; /* Increased margin for centering */
            background-color: #ffffff;
            padding: 20px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            border-radius: 8px;
        }

        h1 {
            font-size: 2.5em;
            color: #007bff; /* Blue heading color */
        }

        #productDetailsContainer {
            margin-top: 20px;
        }

        img {
            max-width: 100%;
            height: auto;
            margin-top: 20px;
            border: 1px solid #ddd;
            border-radius: 4px;
            box-shadow: 0 0 5px rgba(0, 0, 0, 0.1);
        }

        p {
            color: #495057;
            margin: 10px 0;
        }

        /* Additional Styles */
        #relatedProducts {
            margin-top: 40px;
        }

        .related-product {
            border: 1px solid #ddd;
            border-radius: 8px;
            padding: 10px;
            margin-bottom: 20px;
        }

        .related-product img {
            max-width: 100%;
            height: auto;
            border-radius: 4px;
        }

        .related-product p {
            margin: 10px 0;
        }
    </style>
</head>

<body>

    <div class="container">
        <h1 class="display-4">Search Results</h1>
        <!-- Container to display main product details -->
        <div id="productDetailsContainer"></div>

        <!-- Additional Section: Related Products -->
       

        <!-- Include jQuery -->
        <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>

        <!-- Add a script for fetching main product details based on the search query -->
        <script>
            $(document).ready(function () {
                // Fetch main product details using AJAX
                const searchQuery = new URLSearchParams(window.location.search).get('query');
                if (searchQuery) {
                    $.ajax({
                        type: "GET",
                        url: `https://localhost:7114/getProductByName`,
                        data: { productName: searchQuery },
                        success: function (response) {
                            if (response.result) {
                                // Display main product details in the container
                                $("#productDetailsContainer").html(
                                    `<p><strong>Name:</strong> ${response.result.name}</p>
                                     <p><strong>Description:</strong> ${response.result.description}</p>
                                     <p><strong>Price:</strong> $${response.result.price}</p>
                                     <p><strong>Quantity:</strong> ${response.result.quantity}</p>
                                     <img src="https://localhost:7114/${response.result.filePath}" alt="${response.result.name}">`
                                );
                            } else {
                                // Handle case of no search results for main product
                                $("#productDetailsContainer").html('<p>No search results found for the main product.</p>');
                            }
                        },
                        error: function () {
                            // Handle errors if needed
                            console.error("Error fetching main product details");
                        }
                    });
                } else {
                    // Handle case of no search query
                    $("#productDetailsContainer").html('<p>No search query provided for the main product.</p>');
                }
            });
        </script>
    </div>

    <!-- Your existing body content... -->

</body>

</html>
