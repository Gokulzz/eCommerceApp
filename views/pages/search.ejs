<!-- views/search.ejs -->

<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Include Font Awesome CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <!-- Your existing head content... -->

    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f8f9fa;
            margin: 0;
            padding: 0;
        }

        .container {
            max-width: 800px;
            margin: 0 auto;
            background-color: #ffffff;
            padding: 20px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        h1 {
            font-size: 2.5em;
            color: #343a40;
        }

        #productDetailsContainer {
            margin-top: 20px;
        }

        img {
            max-width: 100%;
            height: auto;
            margin-top: 10px;
            border: 1px solid #ddd;
            border-radius: 4px;
            padding: 5px;
            box-shadow: 0 0 5px rgba(0, 0, 0, 0.1);
        }

        p {
            color: #495057;
            margin: 0 0 10px;
        }
    </style>
</head>

<body>

    <%- include('../partials/navbar') %>

    <div class="container mt-4">
        <h1 class="display-4">Search Results</h1>
        <!-- Container to display product details -->
        <div id="productDetailsContainer"></div>

        <!-- Include jQuery -->
        <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>

        <!-- Add a script for fetching product details based on the search query -->
        <script>
            $(document).ready(function () {
                // Fetch product details using AJAX
                const searchQuery = new URLSearchParams(window.location.search).get('query');
                $.ajax({
                    type: "GET",
                    url: `https://localhost:7114/getProductByName`,
                    data: { productName: searchQuery },
                    success: function (response) {
                        // Display product details in the container
                        $("#productDetailsContainer").html(
                            `<p><strong>Name:</strong> ${response.result.name}</p>
                             <p><strong>Description:</strong> ${response.result.description}</p>
                             <p><strong>Price:</strong> $${response.result.price}</p>
                             <p><strong>Quantity:</strong> ${response.result.quantity}</p>
                             <img src="https://localhost:7114/${response.result.filePath}" alt="${response.result.name}">`
                        );
                    },
                    error: function () {
                        // Handle errors if needed
                        console.error("Error fetching product details");
                    }
                });
            });
        </script>
    </div>

    <!-- Your existing body content... -->

</body>

</html>
